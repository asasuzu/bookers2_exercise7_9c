<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete , remote: true, date: {"turbolinks" => false}, class:'text-danger' do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true, date: {"turbolinks" => false} do %>
    ♡<%= book.favorites.count %>
  <% end %>
<% end %>
